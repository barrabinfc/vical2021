{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["webpack-env"],
    "typeRoots": ["node_modules/@types","src/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noEmit": true,
  },
  "resolve": {
    "extensions": [".ts", ".js", ".json",".graphql"]
  }
}
