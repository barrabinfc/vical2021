---
import {AstroContextSymbol, Page, toPage, AstroPage, PageSummary, toPageSummary } from '../lib/page/Page'

import BaseLayout from '../layouts/base.astro';
// import SvgPlaceholder from '../components/SvgPlaceholder';

let page = {
  title: 'Page not found',
  description: 'Page not found',
  schema: 'basic',
  url: new URL('https://vical.me/404'),
  publishedAt: new Date(),
  content: {
    description: 'Page not found'
  },
};

---

<!DOCTYPE html>
<BaseLayout {page}>
  <article id="content">
    <section class="page404">
      <div class="grid2">
        <div class="item headline">
          <h1>NOT FOUND</h1>
        </div>
        <div class="item highlight">
          <img src='/pictures/chichen-itza-1600-cropped.jpg' alt='Ruins of Chichen Itza - Mexico'/>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>

<style lang="scss" scoped>
@use "sass:math";
@use "src/styles/variables" as *;
@use "src/styles/breakpoints" as bp;
@use "src/styles/grids" as grids;

#content {
  position: relative;
}

.page404 {
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: flex-end;
  min-height: calc(100vh - var(--footerH));
}

.grid2 {
  width: 100%;
  margin: 1em;
  margin-top: var(--headerH);

  display: flex;
  grid-gap: calc(var(--gap) * 4);

  @include bp.breakpoint(small,max) {
    flex-direction: column;
  }

  :global(.headline) {
    writing-mode: vertical-rl;
    > h1 {
      margin-top: 0;
    }

    @include bp.breakpoint(small, max) {
      writing-mode: horizontal-tb;
    }
  }

  :global(.highlight) {
    display: flex;

    > img {
      max-width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center center;
    }

    @include bp.breakpoint(small, max) {

      > img {
        min-height: 320px;
        height: 70vh;
      }
    }
  }
}

</style>
