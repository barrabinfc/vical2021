---
import BaseLayout from '~/layouts/base.astro';

const content = Astro.props.content || {};
---

<BaseLayout {content}>
  <article id="content" class="post">
    <link rel="stylesheet" href="/styles/prism/solarizedLight.css" />
    <slot />
  </article>
</BaseLayout>

<style lang="scss">
@use "public/styles/grids" as grids;

.post  {
  max-width: 1440px;
  width: 80%;
  margin: 0 auto;

  :global(img) {
    max-width: 100%;
  }

  /**
    * Adjacent spacement fixes
    */
  :global(p > code),
  :global(li > code) {
    font-size: 100%;
    padding: var(--gap) calc(var(--gap) * 1.5 );
    background-color: var(--surface3);
    border-radius: var(--gap);
  }

  /* Adjacent list elements */
  :global( ul + p ),
  :global( ol + p ){
    margin-top: 1.5rem;
  }
}

:global(.surface) {
  min-height: 180px;
  border-radius: calc( var(--gap) * 4 );
  display: flex;
  align-items: center;
  justify-content: center;
}

.grid2 {
  @include grids.flexGrid(2);
}

</style>
