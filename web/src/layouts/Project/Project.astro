---
import BaseLayout from '~/layouts/base.astro';
import Masthead from '~/components/Masthead';
import {cn} from '../../lib/helpers';
const content = Astro.props.content || {};
---

<BaseLayout {content}>
  <script type="text/javascript" src="https://unpkg.com/external-svg-loader@latest/svg-loader.min.js" async></script>
  <article id="content">
    <link rel="stylesheet" href="/styles/devices.min.css" />
    <link rel="stylesheet" href="/styles/browser.min.css" />

    <Masthead className="surface4"
      title={content.title}
      subtitle={content.subtitle}
      image={content.logo}
    />
    <section class={cn('project',content.wrapper)} aria-labelledby="masthead-title">
      <slot />
    </section>
  </article>
</BaseLayout>

<style lang="scss" global>
@use "sass:math";

@use "src/styles/grids" as grids;
@use "src/styles/helpers" as h;
@use "src/styles/typo" as typo;

$containerPadW: 0.1;
$containerWidth: 100vw - (100vw * $containerPadW);
.project  {
  max-width: 1440px;
  position: relative;

  .description {
    margin: 2em 0;
  }

  /** Limit line-lengths */
  p,
  li {
    max-width: 120ch;
  }

  h1 {
    max-width: 15ch;
  }

  h2,
  h3 {
    max-width: 25ch;
  }

  /** Links */
  a:not(.footnote-ref,.footnote-backref) {
    @include typo.link-text;
  }
  a.footnote-backref {
    padding: 0 var(--gap);
    text-decoration: none;
  }

  img {
    max-width: 100%;
  }
  figcaption {
    text-align: center;
    color: var(--text2);
    font-style: italic;
  }

  p:first-of-type {
    margin-top: 0;
  }

  /**
   * Tables
   */
  table {
    border-spacing: 0px;
    border-top: 0px;

    &:not(:last-child) {
      margin-bottom: 1.5rem;
    }

    thead {
      background-color: var(--brand);
      color: var(--text1-invert);

      & th {
        font-size: 1.2rem;
        font-weight: var(--title-weight);
        font-size: 1.2rem;
        text-align: center;
      }
    }
    tr:not(:last-child) {
      & td {
        border-bottom: 1px solid var(--surface2);
      }
    }
    & tr:last-child {
      & td {
        border-bottom: 1px solid var(--surface2);
      }
    }

    & th,
    & td {
      font-family: var(--code-family);
      padding: calc(2 * var(--gap));
      border-right: 1px solid var(--surface2);
      text-align: center;

      &:first-of-type {
        border-left: 1px solid var(--surface2);
      }
    }
  }

  hr {
    margin: 3em 0em;
    border-top: 0;
    border-style: solid;
    border-color:  hsl(var(--brand-hue) 0% 90%)
  }

}

.mockup {
  text-align: center;

  > .browser-mockup {
    width: 70%;
    margin: 0 auto;
  }

  > .marvel-device {
    zoom: 0.5;
    &::after {
      content: ' ';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: inherit;
      @include h.shadow();
    }
  }
}

</style>
