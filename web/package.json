    "webpack-env": "^0.8.0"
  },
  "peerDependencies": {
    "global": "4.4.0"
  },
  "resolutions": {
    "global": "4.4.0"
  },
  "_moduleAliases": {
    "~": "./src"
  },
  "_astroConfig": {
    "projectRoot": ".",
    "pages": "./src/pages",
    "dist": "./dist",
    "buildOptions": {
      "site": "http://vical.me",
      "sitemap": true
    },
    "devOptions": {},
    "renderers": [
      "@astrojs/renderer-react"
    ],
    "markdownOptions": {
      "remarkPlugins": [
        "remark-footnotes",
        "@silvenon/remark-smartypants",
        "remark-unwrap-images",
        "remark-gfm",
        "remark-code-titles",
        "remark-slug"
      ],
      "rehypePlugins": [
        [
          "rehype-add-classes",
          {
            "h1,h2,h3,h4,h5,h6": "title"
          }
        ],
        [
          "rehype-autolink-headings",
          {
            "behavior": "prepend"
          }
        ]
      ]
    }
  }
