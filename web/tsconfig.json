{
  "include": [
    "./src/**/*",
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2015"
    ],
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./*"]
    },
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
  }
}
