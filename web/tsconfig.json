{
  "include": [
    "./src",
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "module": "CommonJS",
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext"
    ],
    "target": "ESnext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    },
    "ignore": [
      "node_modules/@astrojs",
      "(?:^|/)node_modules/"
    ],
    "include": [
      "tests/**/*"
    ]
},}
